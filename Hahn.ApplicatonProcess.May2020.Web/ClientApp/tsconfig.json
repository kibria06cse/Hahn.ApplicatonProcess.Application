{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "rootDir": "src",
    "target": "ES2017",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "test",
    "src"
  ],
  "files": [
    "src/resource.d.ts"
  ],
  "filesGlob": [
    "./typings/browser.d.ts",
    "./custom_typings/**/*.d.ts"
  ]

}